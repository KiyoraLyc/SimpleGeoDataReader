{
    "lang": "en-us",
    "name": "Simple GeoData Reader",
    "short_name": "Simple GeoData Reader",
    "description": "Simple GeoData Reader is a free webbased front end client side GeoData Reader, Use this to quickly and easily reader GeoData.",
    "scope": "./",
    "start_url": "./",
    "background_color": "#2f3d58",
    "theme_color": "#2f3d58",
    "orientation": "portrait",
    "display": "standalone",
    "prompt_message": "新增到主畫面",
    "icons": [
        {
            "src": "image/appicon512.png",
            "sizes": "512x512"
        },
        {
            "src": "image/appicon192.png",
            "sizes": "192x192"
        }
    ],
    "file_handlers": [
        {
            "name":"geojson",
            "action": "./?datatype=geojson",
            "accept": {
                "application/json": [
                    ".geojson"
                ]
            },
            "icons": [
              {
                "src": "image/geojson-file.png",
                "sizes": "512x512"
              }
            ]
        },
        {
            "name":"topojson",
            "action": "./?datatype=topojson",
            "accept": {
                "application/json": [
                    ".topojson"
                ]
            },
            "icons": [
              {
                "src": "image/topojson-file.png",
                "sizes": "512x512"
              }
            ]
        },
        {
            "name":"kml",
            "action": "./?datatype=kml",
            "accept": {
                "text/xml": [
                    ".kml"
                ]
            },
            "icons": [
              {
                "src": "image/kml-file.png",
                "sizes": "512x512"
              }
            ]
        },
        {
            "name":"gpx",
            "action": "./?datatype=gpx",
            "accept": {
                "text/xml": [
                    ".gpx"
                ]
            },
            "icons": [
              {
                "src": "image/gpx-file.png",
                "sizes": "512x512"
              }
            ]
        }
    ]
}